<?xml version="1.0" encoding="UTF-8"?>
<window>

	<!-- andres : close dialog on tvchannels and startup screen -->
	<onload condition="Window.IsActive(DialogConfirm.xml) + Window.IsActive(MyPVRChannels.xml)">Action(Close)</onload>
	<onload condition="Window.IsActive(DialogConfirm.xml) + Window.IsActive(Startup.xml)">Action(Close)</onload>

	<!-- andres: if buffering failed play tv again -->
	<onload condition="Window.IsActive(DialogConfirm.xml) + Window.IsActive(MyPVRChannels.xml)">PlayPvrTV</onload>
	<onload condition="Window.IsActive(DialogConfirm.xml) + Window.IsActive(Startup.xml)">PlayPvrTV</onload>

	<include>Animation_DialogPopupOpenClose</include>
	<depth>DepthDialog+</depth>
	<controls>

		<!-- andres: hide if not on tvchannels or startup screen -->
		<visible>!Window.IsActive(MyPVRChannels.xml)</visible>
		<visible>!Window.IsActive(Startup.xml)</visible>

		<control type="group">
			<height>390</height>
			<centertop>50%</centertop>
			<centerleft>50%</centerleft>
			<width>1200</width>
			<include content="DialogBackgroundCommons">
				<param name="width" value="1200" />
				<param name="height" value="380" />
				<param name="header_label" value="" />
				<param name="header_id" value="1" />
			</include>
			<control type="textbox" id="9">
				<left>30</left>
				<top>82</top>
				<right>30</right>
				<height>165</height>
				<label/>
				<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
			</control>
			<control type="progress" id="20">
				<left>30</left>
				<top>260</top>
				<right>30</right>
				<height>22</height>
				<info>System.Progressbar</info>
			</control>
			<control type="grouplist" id="9000">
				<orientation>horizontal</orientation>
				<left>0</left>
				<top>280</top>
				<width>1200</width>
				<align>center</align>
				<include content="DefaultDialogButton">
					<param name="id" value="11" />
					<param name="label" value="" />
				</include>
				<include content="DefaultDialogButton">
					<param name="id" value="10" />
					<param name="label" value="" />
				</include>
				<include content="DefaultDialogButton">
					<param name="id" value="12" />
					<param name="label" value="" />
				</include>
			</control>
		</control>
	</controls>
</window>
