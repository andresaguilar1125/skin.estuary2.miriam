<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>

	<!-- andres: include only big titles view53 -->
	<views>50,51,52,53</views>

	<!-- andres: force biglist view53 on each event -->
	<onload>Container.SetViewMode(53)</onload>

	<!-- andres: load channels when show screen -->
	<onload>PlayPvrTV</onload>

	<menucontrol>9000</menucontrol>
	<controls>
		<include>DefaultBackground</include>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" tween="sine" condition="$EXP[infodialog_active]">Conditional</animation>
			<control type="group">
				<include>OpenClose_Left</include>
				<include>PVRChannelsList</include>
				<include content="PVRChannelsExtendedList">
					<param name="list_id" value="50"/>
				</include>
				<include>PVRChannelsBigList</include>
			</control>
			<control type="group">
				<visible>Control.IsVisible(52)</visible>
				<include>OpenClose_Right</include>
				<include>Visible_Right</include>
				<animation effect="slide" end="56,0" time="0" condition="String.IsEqual(Skin.AspectRatio,21:9)">Conditional</animation>
				<include>PVRChannelsPanel</include>
				<!-- <include>PVRPanelViewInfoPanel</include> -->
			</control>
			<control type="group">
				<depth>DepthContentPanel</depth>
				<include>OpenClose_Right</include>
				<width>870</width>
				<right>0</right>
				<visible>Control.IsVisible(50) | Control.IsVisible(51) | Control.IsVisible(53)</visible>
				<include content="ContentPanel">
					<param name="left" value="-72" />
					<param name="width" value="970" />
					<param name="top" value="-20" />
					<param name="flipx" value="true" />
				</include>
				<!-- andres: disable scrollbar for all views-->
				<include>PVRInfoPanel</include>
			</control>
			<!-- andres: remove content topbar -->
			<!-- andres: disable bottombar -->
			<include>PVRChannelNumberInput</include>
			<!-- andres : disable menu bar  -->
		</control>
		<control type="label" id="29">
			<font></font>
			<include>HiddenObject</include>
		</control>
		<control type="label" id="30">
			<font></font>
			<include>HiddenObject</include>
		</control>
	</controls>
</window>