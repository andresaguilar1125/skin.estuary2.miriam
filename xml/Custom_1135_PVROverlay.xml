<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1135">
	<visible>Player.ShowInfo + VideoPlayer.Content(LiveTV) + Window.IsVisible(VideoFullScreen.xml)</visible>
	<depth>DepthOSD</depth>
	<controls>
		<control type="group">
			<include>Animation_BottomFadeInOut</include>
			<bottom>-140</bottom>
			<height>380</height>
			<control type="image">
				<right>0</right>
				<bottom>380</bottom>
				<width>500</width>
				<height>281</height>
				<texture background="true">$VAR[PlayerInfoClearArtVar]</texture>
				<aspectratio align="center" aligny="bottom">keep</aspectratio>
				<visible>!Skin.HasSetting(enable_playerclearlogo) + !Skin.HasSetting(show_artistclearlogo)</visible>
				<fadetime>100</fadetime>
			</control>
			<control type="image">
				<left>0</left>
				<width>100%</width>
				<height>240</height>
				<texture>dialogs/dialog-bg-nobo.png</texture>
			</control>
			<control type="image">
				<left>30</left>
				<top>20</top>
				<width>200</width>
				<height>200</height>
				<aspectratio aligny="center" align="center">keep</aspectratio>
				<texture fallback="DefaultTVShows2.png">$INFO[Player.Art(thumb)]</texture>
			</control>

			<!-- andres: custom osd info -->
			<control type="textbox">
				<textcolor>$VAR[SkinColorVar]</textcolor>
				<left>240</left>
				<width>280</width>
				<height>240</height>
				<label>$INFO[VideoPlayer.ChannelNumberLabel]</label>
				<align>center</align>
				<aligny>center</aligny>
				<font>lyr4</font>
			</control>
			<control type="label">
				<left>600</left>
				<width>100%</width>
				<height>240</height>
				<label>$INFO[VideoPlayer.ChannelName]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>lyr4</font>
			</control>
			<control type="label">
				<left>530</left>
				<top>10</top>
				<right>30</right>
				<height>30</height>
				<scroll>true</scroll>
				<font>font37_bold</font>
				<textcolor>$VAR[SkinColorVar]</textcolor>
				<label>$VAR[OsdMainLabelVar]</label>
			</control>

			<!-- andres: removed seektimebar -->

			<!-- andres: removed codecs vide info -->

		</control>
	</controls>
</window>
